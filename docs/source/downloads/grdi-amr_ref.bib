	number = {4},
	urldate = {2020-04-23},
	journal = {Journal of Food Protection},
	author = {Chekabab, Samuel Mohammed and Rehman, Muhammad Attiq and Yin, Xianhua and Carrillo, Catherine and Mondor, Martin and Diarra, Moussa S.},
	month = apr,
	year = {2019},
	pages = {548--560},
